# ===========================================
# STEWARDGROWTH ENVIRONMENT VARIABLES
# ===========================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Deployment Mode: 'local' | 'internal' | 'public'
# - local: For development (no billing, no analytics)
# - internal: For your own Steward products (founder code required, no billing)
# - public: For external customers (billing enabled)
DEPLOYMENT_MODE=local

# ===========================================
# SUPABASE
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/stewardgrowth
DIRECT_URL=postgresql://postgres:password@localhost:5432/stewardgrowth

# ===========================================
# AI PROVIDERS
# ===========================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ===========================================
# AD PLATFORMS
# ===========================================

# Google Ads
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_REFRESH_TOKEN=

# Meta (Facebook/Instagram)
META_APP_ID=
META_APP_SECRET=

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# TikTok
TIKTOK_APP_ID=
TIKTOK_APP_SECRET=

# ===========================================
# INTEGRATIONS
# ===========================================

# StewardRing (Call tracking)
STEWARDRING_WEBHOOK_SECRET=your-stewardring-webhook-secret

# Inngest (Background jobs)
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# Email (Resend)
RESEND_API_KEY=

# ===========================================
# PAYMENTS (STRIPE)
# Only required for DEPLOYMENT_MODE=public
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# ===========================================
# OPTIONAL: MONITORING
# ===========================================
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
